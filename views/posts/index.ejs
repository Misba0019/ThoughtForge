<style>
    body {
        background-color: #f8f9fa;
    }
</style>

<div class="text-center mb-4 mt-2">
    <h1 class="fw-bold">All Posts</h1>
    <p class="text-muted">Explore the latest thoughts forged by you.</p>
    <a href="/posts/new" class="btn btn-primary mt-3">+ Create New Post</a>
</div>

<div class="container">
    <div class="row">
        <% posts.forEach(post=> { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 d-flex flex-column shadow-sm border-0">
                        <img src="<%= post.image ? post.image : 'https://images.unsplash.com/photo-1455390582262-044cdead277a?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1073' %>" class="card-img-top" alt="Post image">

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <%= post.title %>
                                </h5>
                                <p class="card-text text-muted">
                                    <%= post.content.substring(0, 120) %>...
                                </p>
                                <div class="mt-auto">
                                <a href="/posts/<%= post._id %>" class="btn btn-outline-dark">Read More</a>
                                </div>
                            </div>
                            
                            <div class="card-footer bg-white border-0 text-muted small text-end">
                                <%= post.createdAt.toDateString() %>
                            </div>
                </div>
            </div>
            <% }) %>
    </div>
</div>