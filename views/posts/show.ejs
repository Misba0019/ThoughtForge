<style>
    body {
        background-color: #fff;
    }
    h1 {
    word-break: break-word;
    overflow-wrap: anywhere;
    }
    .post-content {
        white-space: pre-line;       /* converts \n to line breaks but collapses consecutive spaces */
        overflow-wrap: anywhere;
        word-wrap: break-word;
        line-height: 1.6;
        text-align: left !important; /* override accidental right alignment from parent */
        direction: ltr !important;   /* ensure LTR layout */
        margin: 0;
        padding: 0;
    }
</style>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold">
            <%= post.title %>
        </h1>
        <p class="text-muted">
            <%= post.createdAt.toDateString() %>
        </p>
    </div>

    <% if (post.image) { %>
        <img src="<%= post.image %>" class="img-fluid rounded mb-4 shadow-sm d-block mx-auto" alt="Post image">
        <% } %>

            <div class="post-content fs-5">
                <%= post.content %>
            </div>

            <div class="mt-3">
                <a href="/posts" class="btn btn-outline-secondary">‚Üê Back to All Posts</a>

                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
</div>