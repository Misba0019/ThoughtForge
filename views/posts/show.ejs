<style>
    body {
        background-color: #fff;
    }
    h1 {
    word-break: break-word;
    overflow-wrap: anywhere;
    }
    .post-content {
    line-height: 1.6;
    overflow-wrap: anywhere;
    word-wrap: break-word;
    text-align: left !important;
    direction: ltr !important;
    margin: 0;
    padding: 0;
    max-width: 680px;
  }
  .post-content p { margin: 0 0 1.1em 0; }
</style>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold">
            <%= post.title %>
        </h1>
        <p class="text-muted">
            <%= post.createdAt.toDateString() %>
        </p>
    </div>

    <% if (post.image) { %>
        <img src="<%= post.image %>" class="img-fluid rounded mb-4 shadow-sm d-block mx-auto" alt="Post image">
        <% } %>

            <% // Ensuring LF and split into paragraphs on 2+ newlines
                const raw = (post.content || '')
                .replace(/\r\n/g, '\n' )
                .replace(/\r/g, '\n' );
                const para = raw.split(/\n{2,}/).map(p=>
                p.trim()).filter(Boolean);
            
                // Small escape helper
                function escapeHtml(str) {
                return String(str)
                .replace(/&/g,'&amp;')
                .replace(/</g,'&lt;')
                .replace( />/g,'&gt;')
                .replace(/"/g,'&quot;')
                .replace(/'/g,'&#39;');
                } %>
            
                <div class="post-content fs-5">
                    <% para.forEach(function(p){ %>
                        <p><%- escapeHtml(p).replace(/\n/g, '<br>' ) %></p>
                    <% }); %>
                </div>

            <div class="mt-3">
                <a href="/posts/<%= post._id %>/edit" class="btn btn-primary ">Edit</a>
                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
            <a href="/posts" class="mt-2 btn btn-outline-secondary">‚Üê Back to All Posts</a>
</div>